<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.vartikajain.moviesearch.MainActivity">


    <LinearLayout
        android:background="#f1efef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgbtnBack"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imgbtnList"
            android:src="@drawable/ic_list_black_24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/imgbtnSort"
            android:src="@drawable/ic_sort_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/etMovie"
            android:layout_width="0dp"
            android:hint="Search"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="4"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/imgbtnSearch"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textAppearance=
            "@style/Base.TextAppearance.AppCompat.Headline"
        android:text="JustAboutMovies"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_marginTop="5dp"
        android:layout_width="330dp"
        android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/imgbtnUser"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/flFragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
