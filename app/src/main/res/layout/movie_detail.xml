<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        
        <ImageView
            android:id="@+id/ivBackdrop"
            android:src="@drawable/loading"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/tvMovietitle"
            android:text="MovieTitle"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tvAdult"
                android:text="A"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tvRelease_date"
                android:text="ReleaseDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="6dp"/>

            <ImageView
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"/>
            <TextView
                android:id="@+id/tvUserrating"
                android:text="Vote"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6dp"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:text="Movie Id:"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/tvMovieId"
            android:text="MovieId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:src="@drawable/ic_rate_review_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tvReview"
                android:text="Reviews>"
                android:clickable="true"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="15dp">

           <com.github.ivbaranov.mfb.MaterialFavoriteButton
               app:mfb_type="heart"
               android:id="@+id/mfbFav"
               android:adjustViewBounds="true"
               android:layout_width="30dp"
               android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvFavourite"
                android:text="Add to Favourites"
                android:clickable="true"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="15dp">

            <com.github.ivbaranov.mfb.MaterialFavoriteButton
                app:mfb_type="star"
                android:id="@+id/mfbWatch"
                android:adjustViewBounds="true"
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvWatch"
                android:text="Add to Watch List"
                android:clickable="true"
                android:onClick="onClick"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvOverview"
            android:text="A ticking-time-bomb insomniac and a slippery soap salesman channel primal male aggression into a shocking new form of therapy."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:gravity="left"
            android:background="#f5f4f4"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btnRecommendation"
                android:text="Recommendations"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorAccent"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="45dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnVideo"
                android:text="Watch Videos"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:textSize="18sp"
                android:backgroundTint="@color/colorAccent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>